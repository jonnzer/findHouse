extends ../pug-layout/layout.pug
block body

    div.baiduMap#map
    script.
        function initialize() {
            var mp = new BMap.Map('map');
            mp.centerAndZoom(new BMap.Point(121.491, 31.233), 11);
        }
        function loadScript() {
            var script = document.createElement("script");
            script.src = "//api.map.baidu.com/api?v=3.0&ak=B7QqSK9kBsBTGjChKpSj43tX4vSvilqV&callback=initialize";
            document.body.appendChild(script);
        }
        window.onload = loadScript;
    style.
        .baiduMap {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }
